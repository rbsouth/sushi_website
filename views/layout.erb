<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="/css/index.css">
    <title>Hello Sushi</title>
  </head> 
  <body>

    <nav class="navbar sticky-top navbar-dark bg-dark">
      <div class="navbar-nav">
        <form class="form-inline">
          <a class="navbar-brand nav-inline" href="/home">
            <img src="/images/sushi-home.png" class="d-inline" alt="Home">
          </a>
          <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
          <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
        </form>
      </div>
      <div class="form-inline justify-content-end">
        <% if user_signed_in? %>
          <a class="nav-item nav-link" href="/profile/<%= @user.id%>"><%= @user.username %></a>
        <% else %>
          <a class="nav-item nav-link" href="/">Sign In</a>
        <% end %>
        <a class="nav-item nav-link text-white" data-toggle="modal" data-target="#changeInfoModal">Icon</a>
      </div>
    </nav>

    <%= yield %>

    <div class="modal fade" id="newPostModal" tabindex="-1" role="dialog" aria-labelledby="newPostModal" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-body">
            <div class="form-group">
              <label for="postPictureInput">Paste your pictures URL!</label>
              <input class="form-control" id="postPictureInput" placeholder="Picture URL" name="post[picture]">
            </div>
            <form class="form-group" method="POST" action="/new-post">
              <label for="postTextArea">Let's talk Sushi</label>
              <textarea class="form-control" rows="5" id="postTextArea" maxlength="150" placeholder="Say something!" name="post[content]"></textarea>
              <span id="chars">150</span> characters remaining
              <button type="submit" class="btn btn-primary">Post</button>
            </form>
          </div>
        </div>
      </div>
    </div>

    <nav class="navbar fixed-bottom navbar-dark bg-dark justify-content-center">
      <a id="newPostBtn" class="nav-link" href="#">Link</a>
    </nav>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <script type="text/javascript" src="/js/index.js"></script>
  </body>
</html>
  